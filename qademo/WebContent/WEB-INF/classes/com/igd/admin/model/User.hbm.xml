<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.igd.admin.model.User" table="sys_user">
    	<id name="id" type="java.lang.String" column="s_id" unsaved-value="">
			<generator class="uuid.hex"/>
		</id>
        <many-to-one name="role" class="com.igd.admin.model.Role" column="s_role_id" lazy="false"/>
        <property name="userName" column="s_username" />
        <property name="realName" column="s_realName" />
        <property name="password" column="s_password" />
        <property name="identification" column="s_identification" />
        <property name="email" column="s_email" />
        <property name="telephone" column="s_tel" />
        <property name="fax" column="s_fax" />
        <property name="loginTime" column="d_loginTime" />
        <property name="islogin" column="s_islogin" />
        <property name="state" column="s_state" />
        <property name="remark" column="s_remark" />
    </class>
</hibernate-mapping>
