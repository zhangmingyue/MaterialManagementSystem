<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.baseinfo.model.Storeandworker" table="storeandworker">
	<id name="id"  type="java.lang.String" column="id">
			<generator class="uuid.hex"/>
	</id> 
	<many-to-one name="store" lazy="false" cascade="save-update" class="com.igd.baseinfo.model.Storageinfo" column="st_id"   />
 	<many-to-one name="worker"  lazy="false"  cascade="save-update"   class="com.igd.baseinfo.model.Workerinfo" column="w_id"   />
 
	  
	</class>
	
</hibernate-mapping>