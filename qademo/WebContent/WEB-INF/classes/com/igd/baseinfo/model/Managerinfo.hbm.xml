<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.baseinfo.model.Managerinfo" table="managerinfo">
	<id name="id"  type="java.lang.String" column="ma_id"  >
			<generator class="uuid.hex"/> 
	</id> 
	<property name="name" column="ma_name" />
	<property name="remark" column="remark" />
	<property name="uid" column="uid" />
	<many-to-one name="storage"  lazy="false" class="com.igd.baseinfo.model.Storageinfo" column="stroe_id"   />
  <set name="sgs" lazy="false"  inverse="true" table="managerandgoods">
		<key column="mid"/>
		<one-to-many class="com.igd.baseinfo.model.ManagerAndGoods"/>
	</set>
	</class>
	
</hibernate-mapping>