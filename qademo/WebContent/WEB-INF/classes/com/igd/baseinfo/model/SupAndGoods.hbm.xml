<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.baseinfo.model.SupAndGoods" table="supandgoods">
	<id name="id"  type="java.lang.String" column="id">
			<generator class="uuid.hex"/>
	</id> 
	<many-to-one name="supplier" lazy="false" cascade="save-update" class="com.igd.baseinfo.model.Supplierinfo" column="sp_id"   />
 	<many-to-one name="goods"  lazy="false"  cascade="save-update"   class="com.igd.baseinfo.model.Goodsbase" column="gb_id"   />
 
	  
	</class>
	
</hibernate-mapping>