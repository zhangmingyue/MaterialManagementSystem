<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.baseinfo.model.Workerinfo" table="workerinfo">
	<id name="id"  type="java.lang.String" column="wk_id">
			<generator class="uuid.hex"/>
	</id> 
	<property name="num" column="wk_num" />
	<property name="name" column="wk_name" />
	<property name="remark" column="remark" />
	<set name="sw" lazy="false" inverse="true" table="storeandworker">
		<key column="w_id"/>
		<one-to-many class="com.igd.baseinfo.model.Storeandworker"/>
	</set>
	  
	</class>
	
</hibernate-mapping>