<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.baseinfo.model.Purchaseinfo" table="purchaseinfo">
		<id name="id"  type="java.lang.String" column="pur_id">
				<generator class="uuid.hex"/>
		</id> 
		<property name="link" column="link" />
		<property name="name" column="pur_name" />
		<property name="linkman" column="linkman" />
		<property name="addr" column="addr" />
		<property name="status" column="status" />
		<property name="spell" column="spell" />
		<property name="remark" column="remark" />
		<property name="businessLicence" column="businessLicence" />
		<property name="blcheckTime" column="blcheckTime" />
		<property name="organizationLicence" column="organizationLicence" />
		<property name="olcheckTime" column="olcheckTime" />
		<property name="medicinebLicence" column="medicinebLicence" />
		<property name="taxRegister" column="taxRegister" />
		<property name="commonTaxPayer" column="commonTaxPayer" />
		<property name="purCopyTable" column="purCopyTable" />
		<property name="agreement" column="agreement" />
		<property name="provinceName" column="provinceName" />
		<property name="provinceNumber" column="provinceNumber" />
		<property name="purNum" column="purNum" />
		<property name="updateTime" column="updateTime" />
		
		<!-- 
		<many-to-one name="code"  lazy="false" class="com.igd.admin.model.Code" column="cl_id"   />
	 	 --> 
	</class>
	
</hibernate-mapping>