<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">


	<bean id="storageinfoAction" class="com.igd.baseinfo.action.StorageinfoAction"  scope="prototype">
		<property name="storageinfoService">
			<ref bean="storageinfoService"/>
		</property>
	</bean>	
	<bean id="managerinfoAction" class="com.igd.baseinfo.action.ManagerinfoAction"  scope="prototype">
		<property name="managerinfoService">
			<ref bean="managerinfoService"/>
		</property>
	</bean>	
	<bean id="storeplaceAction" class="com.igd.baseinfo.action.StoreplaceAction"  scope="prototype">
		<property name="storeplaceService">
			<ref bean="storeplaceService"/>
		</property>
	</bean>	
	<bean id="workerinfoAction" class="com.igd.baseinfo.action.WorkerinfoAction"  scope="prototype">
		<property name="workerinfoService">
			<ref bean="workerinfoService"/>
		</property>
	</bean>	
	
	
	<bean id="supplierinfoAction" class="com.igd.baseinfo.action.SupplierinfoAction"  scope="prototype">
		<property name="supplierService">
			<ref bean="supplierService"/>
		</property>
	</bean>	 
	
	<bean id="purchaseinfoAction" class="com.igd.baseinfo.action.PurchaseinfoAction"  scope="prototype">
		<property name="purchaseService">
			<ref bean="purchaseService"/>
		</property>
	</bean>	 
	<bean id="goodsbaseAction" class="com.igd.baseinfo.action.GoodsbaseAction"  scope="prototype">
		<property name="goodsbaseService">
			<ref bean="goodsbaseService"/>
		</property>
	</bean>	 
	<bean id="testinfoAction" class="com.igd.baseinfo.action.TestinfoAction"  scope="prototype">
		<property name="testifnoService">
			<ref bean="testifnoService"/>
		</property>
	</bean>	 
    <!-- 部署系统用户管理业务数据库访问类-->

	<bean id="storageinfoDao" class="com.igd.baseinfo.dao.StorageinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property> 
	</bean>
	
	<bean id="workerinfodao" class="com.igd.baseinfo.dao.WorkerinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property> 
	</bean>
	
	<bean id="managerinfoDao" class="com.igd.baseinfo.dao.ManagerinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property> 
	</bean>
	
	<bean id="storeplaceDao" class="com.igd.baseinfo.dao.StoreplaceDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property> 
	</bean>
	
	
	
	<bean id="supplierinfoDao" class="com.igd.baseinfo.dao.SupplierinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>  
	</bean>
	
	<bean id="purchaseDao" class="com.igd.baseinfo.dao.PurchaseinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>  
	</bean>
	<bean id="goodsDao" class="com.igd.baseinfo.dao.GoodsbaseDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>  
	</bean>
	<bean id="testinfoDao" class="com.igd.baseinfo.dao.TestinfoDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>  
	</bean>
	<!-- 部署系统用户管理业务逻辑组件-->
	
     <!--仓库信息管理  -->
    <bean id="storageinfoService" class=" com.igd.baseinfo.service.StorageinfoServiceImpl">
        <property name="storagedao">
        	<ref bean="storageinfoDao" />
        </property>
    </bean>
 	<!--库管员管理  -->
    <bean id="managerinfoService" class=" com.igd.baseinfo.service.ManagerServiceImpl">
        <property name="managerdao">
        	<ref bean="managerinfoDao" />
        </property>
    </bean>
    <!--库位管理  -->
    <bean id="storeplaceService" class=" com.igd.baseinfo.service.StoreplaceServiceImpl">
        <property name="storeplacedao">
        	<ref bean="storeplaceDao" />
        </property>
    </bean>
    
    <!--库工管理  -->
  <bean id="workerinfoService" class=" com.igd.baseinfo.service.WorkerinfoServiceImpl">
        <property name="workerinfodao">
        	<ref bean="workerinfodao" />
        </property>
    </bean>


     <!--供货商信息管理  -->
    <bean id="supplierService" class=" com.igd.baseinfo.service.SupplierinfoServiceImpl">
        <property name="supplierinfoDao">
        	<ref bean="supplierinfoDao" />
        </property>
    </bean>
       <!--购货方信息管理  -->
    <bean id="purchaseService" class=" com.igd.baseinfo.service.PurchaseServiceImpl">
        <property name="purchaseDao">
        	<ref bean="purchaseDao" />
        </property>
    </bean>
     <!--物资基本信息管理  -->
    <bean id="goodsbaseService" class=" com.igd.baseinfo.service.GoodsbaseServiceImpl">
        <property name="goodsDao">
        	<ref bean="goodsDao" />
        </property>
    </bean>
         <!--检验单信息管理  -->
    <bean id="testifnoService" class=" com.igd.baseinfo.service.TestinfoServiceImpl">
        <property name="testinfoDao">
        	<ref bean="testinfoDao" />
        </property>
    </bean>
</beans>