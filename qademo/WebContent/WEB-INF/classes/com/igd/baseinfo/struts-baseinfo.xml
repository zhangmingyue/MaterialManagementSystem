<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd" >
<struts>
	<package name="baseinfo" namespace="/baseinfo" extends="default">
	<!-- StorageinfoAction 仓库信息 -->
        <action name="storageinfo" class="com.igd.baseinfo.action.StorageinfoAction">
	        <result name="pagedQuery">/baseinfo/storageinfo/list.jsp</result>
	        <result name="error">/error.jsp</result>
	         <result name="remove" type="redirectAction">storageinfo!pagedQuery.action</result>
	        <result name="save" type="redirect">storageinfo!queryById.action?id=${id}</result>
	         <result name="queryById">/baseinfo/storageinfo/edit.jsp</result>
	    	<result name="queryAdd">/baseinfo/storageinfo/edit.jsp</result>
	    	<result name="querychosework">/baseinfo/storageinfo/choseworker.jsp</result>
	    	<result name="chosework" type="redirect">storageinfo!queryAllWorklist.action?id=${id}</result>
	         <interceptor-ref name="baseStack" />
	         
        </action> 
         	<!-- goodsbaseAction 物资基本信息 -->  
        <action name="goodsbase" class="goodsbaseAction">
	        <result name="pagedQuery">/baseinfo/goodsbase/list.jsp</result>
	        <result name="error">/error.jsp</result>
	         <result name="remove" type="redirectAction">goodsbase!pagedQuery.action</result>
	        <result name="save" type="redirect">goodsbase!queryById.action?id=${id}</result>
	        <result name="savearea" type="redirect">goodsbase!addArea.action?id=${id}</result>
	         <result name="queryById">/baseinfo/goodsbase/edit.jsp</result>
	    	<result name="queryAdd">/baseinfo/goodsbase/edit.jsp</result>
	    	<result name="addarea">/baseinfo/goodsbase/chosearea.jsp</result>
	         <interceptor-ref name="baseStack" />
        </action> 
        <!-- purchaseinfoAction 购货方信息 --> 
        <action name="purchinfo" class="purchaseinfoAction">
	        <result name="pagedQuery">/baseinfo/purchase/list.jsp</result>
	        <result name="error">/error.jsp</result>
	         <result name="remove" type="redirectAction">purchinfo!pagedQuery.action</result>
	        <result name="save" type="redirect">purchinfo!queryById.action?id=${id}</result>
	         <result name="queryById">/baseinfo/purchase/edit.jsp</result>
	    	<result name="queryAdd">/baseinfo/purchase/edit.jsp</result>
	    	<result name="recycle">/baseinfo/purchase/recycle.jsp</result>
	         <interceptor-ref name="baseStack" />
        </action>
     </package>
     
</struts>