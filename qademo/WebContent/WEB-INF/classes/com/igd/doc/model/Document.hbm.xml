<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>
	<class name="com.igd.doc.model.Document" table="document">
	<id name="doc_id"  type="java.lang.String" column="doc_id">
			<generator class="uuid.hex"/>
	</id> 
	<property name="company" column="company" />
	<property name="address" column="address" />
	<property name="time" column="launch_time" />
	<property name="zone" column="zone" />
	<property name="transporter" column="transporter" />
	<property name="manager" column="manager" />
	<property name="keeper" column="keeper" />
	<property name="listmaker" column="listmaker" />
	<property name="checker" column="checker" />
	<property name="accouting" column="accouting" />	
	<property name="remark" column="remark" />
	<property name="status" column="status" />
	<property name="submitTime" column="submitTime" />
	<set name="cargos" lazy="false"  inverse="true" table="cargo">
		<key column="doc_id"/>
		<one-to-many class="com.igd.doc.model.Cargo"/>
	</set>
	<many-to-one name="pur" 
        column="pur_Id"
        lazy="false"
        not-null="true"/>
	</class>
	
</hibernate-mapping>